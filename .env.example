# ==========================================
# L2VE 통합 환경 변수 설정
# ==========================================

# ==========================================
# PostgreSQL 설정
# ==========================================
POSTGRES_DB=postdb
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=5433

# Backend에서 사용 (DB_* 우선순위)
DB_ENGINE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=admin123
DB_NAME=postdb

# ==========================================
# Backend (FastAPI) 설정
# ==========================================
API_HOST=0.0.0.0
API_PORT=3000
DEBUG=false

# ==========================================
# JWT 인증 (⚠️ 프로덕션에서 반드시 변경!)
# ==========================================
SECRET_KEY=secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# Jenkins 설정
# ==========================================
# Jenkins Admin 계정
JENKINS_ADMIN_USER=admin
JENKINS_ADMIN_PASSWORD=admin123


# Jenkins 연동 (Backend -> Jenkins 내부 통신)
JENKINS_URL=http://jenkins:8080
JENKINS_USER=admin
BACKEND_API_BASE=http://backend:3000/api

JENKINS_API_TOKEN=
JENKINS_JOB_NAME=sunday

# 보안 키 (⚠️ 프로덕션에서 반드시 변경!)
JENKINS_CALLBACK_SECRET=jenkins_callback_secret_here
BACKEND_SERVICE_API_KEY=backend_service_api_key_here

# Jenkins Git Credentials
GITHUB_TOKEN=ghp_github_personal_access_token_here
JENKINS_GIT_CREDENTIALS_ID=github-token

# ==========================================
# API Keys (Jenkins Job에서 사용)
# ==========================================
# GitHub Personal Access Token

# LLM API Keys
GROQ_API_KEY=gsk_grok_api_key_here
OPENAI_API_KEY=sk_openai_api_key_here
OPENROUTER_API_KEY=sk_openrouter_api_key_here
AWS_BEARER_TOKEN_BEDROCK=aws_bearer_token_bedrock_here
BEDROCK_AWS_REGION=ap-southeast-2

# ==========================================
# SMTP 설정 (Gmail 예시: 앱 비밀번호 사용)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your_app_password   # Gmail 앱 비밀번호 16자리
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_REPLY_TO=your@gmail.com

# ==========================================
# Frontend (React) 설정
# ==========================================
VITE_API_BASE_URL=/api
FRONTEND_PORT=80

# ==========================================
# Scanner 설정 (langgraph-scanner)
# ==========================================
API_BASE_URL=http://backend:3000
MCP_SERVER_URL=http://localhost:9121
LANGCHAIN_API_KEY=lsv2_pt_langchain_api_key_here

LANGFUSE_HOST=https://api.langfuse.com
LANGFUSE_PUBLIC_KEY=langfuse_public_key_here
LANGFUSE_SECRET_KEY=langfuse_secret_key_here


# ==========================================
# 필수 변경 항목 체크리스트 ⚠️
# ==========================================
# 프로덕션 배포 전 반드시 변경:
# [ ] POSTGRES_PASSWORD
# [ ] SECRET_KEY (생성: openssl rand -hex 32)
# [ ] JENKINS_ADMIN_PASSWORD
# [ ] JENKINS_API_TOKEN (Jenkins UI에서 생성)
# [ ] JENKINS_CALLBACK_SECRET (생성: openssl rand -hex 32)
# [ ] BACKEND_SERVICE_API_KEY (생성: openssl rand -hex 32)
# [ ] GITHUB_TOKEN (GitHub에서 생성)
# [ ] GROQ_API_KEY 또는 OPENAI_API_KEY

# ==========================================
# 접속 정보
# ==========================================
# Frontend:   http://localhost:80
# Backend:    http://localhost:3000/docs
# Jenkins:    http://localhost:10218
# PostgreSQL: localhost:5433
